<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/competition_relative">
    <include
        android:id="@+id/toolbar_competition"
        layout="@layout/app_bar" />

    <android.support.v7.widget.CardView
        android:id="@+id/competition_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp">


            <ir.elegam.doctor.Classes.CustomTextView
                android:id="@+id/question_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:singleLine="false"
                android:maxLines="3"
                android:minLines="1"
                android:text="آیا حاکم در شرکت است ؟" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="right">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="جواب 1"
                android:textSize="@dimen/_12sdp"
                android:maxLines="2"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:text="جواب 2"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="2"/>


                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/result3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:text="جواب 3"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="2"/>


                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/result4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:text="جواب 4"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="2"/>

            </RadioGroup>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/send_competition_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/shape_buttons"
                android:text="ارسال"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
