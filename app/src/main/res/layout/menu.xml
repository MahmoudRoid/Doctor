            </RelativeLayout>








            <RelativeLayout
                android:id="@+id/relative_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:background="@drawable/shape_normal_button">

                <ir.elegam.doctor.Classes.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_support"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/support_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="ارتباط با پشتیبانی"/>

                <ImageView
                    android:id="@+id/support_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
