<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Style default
    -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>

        <item name="colorPrimaryDark">@color/pri700</item>
        <item name="colorPrimary">@color/pri500</item>
        <item name="colorAccent">@color/FABcolor</item>

        <item name="android:textColorPrimary">@color/TXTcolor</item>
        <item name="android:textColor">@color/TXTcolor</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:windowBackground">@color/pri100</item>

        <item name="android:spinnerItemStyle">@style/MySpinner</item>
    </style>

    <style
        name="MySpinner">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:background">@color/pri500</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style
        name="TextLabel"
        parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="txt_setting" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>